<h1>Burgers!</h1>

<h2>Take a Bite!</h2>

<ul>
    {{#each cats}}
    {{#unless sleepy}}
    {{> burgers/burger-block bite=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Yummy Burgers!</h2>

<ul>
    {{#each burgers}}
    {{#if bite}}
    {{> burgers/burger-block bite=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Type:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="bite">Take a bite?</label><br>
        <input type="radio" name="bite" value="1" checked> Yes<br>
        <input type="radio" name="bite" value="0"> No
    </div>

    <button type="submit">Add a Burger</button>
</form>